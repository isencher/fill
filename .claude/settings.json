{
  "mcpServers": {
    "automation": {
      "command": "python3",
      "args": ["/app/fill/mcp_automation_server.py"],
      "description": "自动化开发执行系统 - 负反馈控制"
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3",
            "args": ["/app/fill/.claude/hooks/automation.py", "--hook", "pre", "--input", "{input}"],
            "async": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3",
            "args": ["/app/fill/.claude/hooks/automation.py", "--hook", "post", "--input", "{input}"],
            "async": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3",
            "args": ["/app/fill/.claude/hooks/automation.py", "--hook", "prompt", "--input", "{input}"],
            "async": false
          }
        ]
      }
    ]
  }
}
